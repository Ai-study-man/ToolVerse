# 生产环境变量配置示例
# 复制此文件为 .env.local 并填入实际值

# ===== Notion API 配置 =====
NOTION_TOKEN=your_notion_integration_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# ===== 网站配置 =====
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_NAME=ToolVerse
NEXT_PUBLIC_SITE_DESCRIPTION=Discover the best AI tools for your business and creative projects

# ===== 分析和SEO =====
# Google Analytics（可选）
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Search Console（可选）
NEXT_PUBLIC_GSC_ID=your_search_console_id

# ===== API 配置 =====
# API速率限制
API_RATE_LIMIT=100
API_CACHE_TTL=3600

# ===== 安全配置 =====
# CSRF保护
NEXTAUTH_SECRET=your_random_secret_key_here
NEXTAUTH_URL=https://yourdomain.com

# ===== 功能开关 =====
# 启用调试模式（生产环境应为false）
NEXT_PUBLIC_DEBUG=false

# 启用性能监控
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# 启用错误追踪
NEXT_PUBLIC_ERROR_TRACKING=true
